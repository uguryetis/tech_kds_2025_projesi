<!DOCTYPE html>
<html lang="tr">
<head>
  <%- include('partials/head', { title }) %>
</head>
<body>
  <div class="wrapper">
    <%- include('partials/nav', { activePage }) %>

    <main class="main-content">
      <h1 class="page-title">Ürünler</h1>

      <div class="card">
        <h2 class="section-title">Yeni Ürün Ekle</h2>
        <form action="/urunler/ekle" method="post" class="form-inline">
          <input type="text" name="urun_adi" placeholder="Ürün adı" required>
          <input type="number" step="0.01" name="satis_fiyati" placeholder="Satış fiyatı (TL)">
          <input type="number" name="stok" placeholder="Stok">
          <button type="submit" class="btn-primary">
            <i class="fa-solid fa-plus"></i> Ekle
          </button>
        </form>
      </div>

      <div class="card">
        <h2 class="section-title">Ürün Listesi</h2>
        <table class="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Ürün Adı</th>
              <th>Satış Fiyatı (TL)</th>
              <th>Stok</th>
              <th>İşlemler</th>
            </tr>
          </thead>
          <tbody>
            <% urunler.forEach(u => { %>
              <tr>
                <td><%= u.urun_id %></td>
                <td>
                  <form action="/urunler/<%= u.urun_id %>/guncelle" method="post" class="inline-form">
                    <input type="text" name="urun_adi" value="<%= u.urun_adi %>">
                </td>
                <td>
                    <input type="number" step="0.01" name="satis_fiyati" value="<%= u.satis_fiyati %>">
                </td>
                <td>
                    <input type="number" name="stok" value="<%= u.stok %>">
                </td>
                <td>
                    <button type="submit" class="btn-icon" title="Güncelle">
                      <i class="fa-solid fa-pen"></i>
                    </button>
                  </form>
                  <form action="/urunler/<%= u.urun_id %>/sil" method="post" class="inline-form">
                    <button type="submit" class="btn-icon danger" title="Sil">
                      <i class="fa-solid fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</body>
</html>





